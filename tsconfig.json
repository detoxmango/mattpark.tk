{
    "baseUrl": "src",
    "exclude": ["node_modules", "public", ".cache", "coverage", "stories"],
    "include": ["src/**/*"],
    "compilerOptions": {
        "sourceMap": true,
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "skipLibCheck": true,
        "lib": ["dom", "es2015", "es2017", "es2018", "esnext"],
        "strict": true,
        "pretty": true,
        "noEmit": true,
        "typeRoots": ["node_modules/@types", "./src/@types/", "./src/**/types/"],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        //        "isolatedModules": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "strictNullChecks": true
    }
}
